{
  "id": 5,
  "authorId": "rjsteinert",
  "statement": "On a Raspberry Pi, make a blink1 LED blink {{color}} every {{number}} seconds.",
  "installInstructions": "Save as `autorun.sh` and place on a Raspberry Pi's SD card.",
  "recipe": [
    "apt-get install -y libusb-1.0-0-dev", 
    "cd /root",
    "git clone https://github.com/todbot/blink1.git ",
    "cd blink1/commandline", 
    "make",
    "",
    "cd /boot",
    "mv autorun.sh autoran.sh ",
    "touch autorun.sh", 
    "chmod 755 autorun.sh",
    "",
    "echo 'watch -n{{number}} \"/root/blink1/commandline/blink1-tool --blink {{color}} 1\"' > /boot/autorun.sh ",
    "reboot" 
  ]
}
