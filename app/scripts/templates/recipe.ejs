<h1>Recipe #<%= id %> by <%= authorId %></h1>

<p class="lead statement">
  <%= statement %>
</p>

<div class="recipe">
  <div class="form-group">
    <textarea class="form-control" rows="3" id="recipe" readonly><%= recipe %></textarea>
  </div>
  <h3> Install Instructions </h3>
  <blockquote class="install-instructions">
    <p> <%= installInstructions %> </p>
  </blockquote>

</div>
